{
    "name": "MHO",
    "version": "0.1.0",
    "description": "Study... scripts!",
    "manifest_version": 2,
    "icons": {
        "128": "/images/horn128.png"
    },

    "browser_action": {
        "default_icon": "/images/cheese32off.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "*://*.mousehuntgame.com/"
    ],

    "background": {
        "persistent": false,
        "page": "background.html"
    },

    "options_page": "options.html",

    "content_scripts": [
        {
            "js": [
                "log.js",
                "core.js"
            ],
            "matches": [
                "*://www.mousehuntgame.com/*"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }

    ],

    "web_accessible_resources": [
        "images/*"
    ]
}
